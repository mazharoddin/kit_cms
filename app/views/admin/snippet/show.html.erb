<% right_column %>

<% content_for :main do %>
  <h1 class="snippet_icon">Reuseable Snippet</h1>
  <span>Created <%= time_ago_in_words(@snippet.created_at) %> ago by <%= @snippet.user.email rescue 'unknown'%></span><br/><br/>
  <b>Name:</b> <%= @snippet.name %><br/>
  <b>Description:</b> <%= @snippet.description %><br/>
  <b>Body:</b> <%= gnric_snippet(@snippet.name) %><br/>
  <div style="margin-top: 20px;" class="clearfix">
    <%= icon_to "Edit", "/admin/snippet/#{@snippet.id}/edit", false, {:method=>:get, :style=>"margin-right: 20px; display: inline; float: left; "} %> <%= icon_to "Delete", "/admin/snippet/#{@snippet.id}", false, {:method=>:delete, :style=>"margin-right: 20px; display: inline; float: left;", :confirm=>"Are you sure you want to delete this snippet?  It cannot be undone."} %> <%= icon_to "Snippet List", "/admin/snippet", false, :style=>"float: left;" %>

  </div>
<% end %>

