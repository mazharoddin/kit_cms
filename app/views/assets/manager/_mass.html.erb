	<p>
               Select <%= link_to_function "All", "select_all(true);" %> <%= link_to_function "None", "select_all(false);" %>
       </p>

       <div style="display: none" id="mass_options">
               <%= link_to_function "Delete", "submit_mass('delete');", {:confirm=>"Are you sure you want to delete the selected items?"} %><br/>
               <%= form_tag "/assets/mass_assets", {:id=>"mass_form", :method=>:post} do %>
                       Tag: <%= text_field_tag :tag %>
                       <%= submit_tag "Save", {:id=>"save_button"} %>
                       <%= hidden_field_tag :mode, {:mode=>""} %>
                       <%= hidden_field_tag :ids, {:id=>"ids"} %>
               <% end %>
       </div>
