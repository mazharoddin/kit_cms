%li(class="group_field input_#{field.code_name} input_field_#{field.id} clearfix")
  %label(for="field_#{field.id}" class="title #{field.is_mandatory? ? 'required' : ''}")
    = field.name

  = render :partial=>"form/form_field", :locals=>{:type=>field.form_field_type, :field=>field, :value=>value, :is_mandatory=>field.is_mandatory?, :has_error=>false, :show_options_editor=>false}
  - if field.description.not_blank?
    .field_description
      = field.description

