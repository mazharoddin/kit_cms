- convo_list = {}
- @conversations.each do |convo|
  - next if convo_list[convo.id]
  - convo_list[convo.id] = true
  %li
    = link_to_function convo.name, "load_conversation(#{convo.id}, '#{j convo.name}');"
    = " *" if convo.messages_waiting
    - c = 0
    - convo.users.each do |u| 
      - unless current_user && u.id == current_user.id
        = u.display_name
      - c += 1
      - if c>5
        = "..."
        break

